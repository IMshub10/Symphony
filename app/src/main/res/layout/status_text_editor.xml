<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_status_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:visibility="gone">


    <ImageView
        android:id="@+id/add_status_image"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_image_24" />


    <EditText
        android:id="@+id/status_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/fab"
        android:layout_toEndOf="@id/add_status_image"
        android:background="@drawable/container_text_editor"
        android:focusableInTouchMode="true"
        android:hint="@string/add_a_caption"
        android:inputType="textMultiLine|textCapSentences"
        android:lineSpacingExtra="1dp"
        android:maxLines="2"
        android:minHeight="30dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:selectAllOnFocus="true"
        android:textSize="16sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        app:rippleColor="@color/colorAccent"
        app:srcCompat="@drawable/ic_baseline_send_24" />
</RelativeLayout>